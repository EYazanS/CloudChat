<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>
        Cloud chat
    </title>
</head>
<body>
    <div id="login-page" class="container hiddne">
        <form id="login-form">
            <div class="row p-1">
                <div class="col-1">Username</div>
                <div class="col-5"><input type="text" id="username" /></div>
            </div>

            <div class="row p-1">
                <div class="col-6 text-end">
                    <input type="submit" id="loginButton" value="Login" />
                </div>
            </div>
        </form>
    </div>

    <div id="chat-page" class="container" style="display: none">
        <form id="commands-form">
            <div class="row p-1">
                <div class="col-1">Message</div>
                <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
            </div>

            <div class="row p-1">
                <div class="col-6 text-end">
                    <input type="submit" id="sendButton" value="Send Message" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6">
                    <hr />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-6">
                    <ul id="messagesList"></ul>
                </div>
            </div>
        </form>
    </div>

    <script src="~/js/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
</body>
</html>